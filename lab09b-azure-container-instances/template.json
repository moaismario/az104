{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_az104_c1_name": {
            "defaultValue": "az104-c1",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2024-11-01-preview",
            "name": "[parameters('containerGroups_az104_c1_name')]",
            "location": "westeurope",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_az104_c1_name')]",
                        "properties": {
                            "image": "mcr.microsoft.com/azuredocs/aci-helloworld:latest",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "ip": "172.211.190.55",
                    "type": "Public",
                    "dnsNameLabel": "[parameters('containerGroups_az104_c1_name')]",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                },
                "osType": "Linux"
            }
        }
    ]
}